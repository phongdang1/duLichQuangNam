@page
@model duLichQuangNam.Pages.LoginModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body">
                    <h3 class="text-center mb-4">Đăng nhập</h3>
                    <form method="post">
                        <div class="form-group mb-3">
                            <label for="UserName">Tên đăng nhập</label>
                            <input asp-for="LoginData.UserName" class="form-control rounded-3" placeholder="Nhập tên đăng nhập" />
                            <span asp-validation-for="LoginData.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="Password">Mật khẩu</label>
                            <input type="password" asp-for="LoginData.Password" class="form-control rounded-3" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="LoginData.Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 rounded-3 py-2">Đăng nhập</button>

                        <div asp-validation-summary="All" class="text-danger mt-2"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
