@page
@model IndexModel
@{
    ViewData["Title"] = "Khám phá Quảng Nam";
}

<div class="container mt-4">

    <div id="carouselExampleIndicators" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner rounded shadow carousel-container">
            <div class="carousel-item active">
                <img src="~/images/hoian.jpg" class="d-block w-100 carousel-img" alt="Hội An" />
            </div>
            <div class="carousel-item">
                <img src="~/images/thanh-dia-my-son.jpg" class="d-block w-100 carousel-img" alt="Mỹ Sơn" />
            </div>
            <div class="carousel-item">
                <img src="~/images/culaocham.JPG" class="d-block w-100 carousel-img" alt="Cù Lao Chàm" />
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <div class="text-center mb-5">
        <h1 class="display-4 text-primary">Khám phá Quảng Nam</h1>
        <p class="lead">Trải nghiệm những địa điểm du lịch nổi bật và văn hóa độc đáo của Quảng Nam</p>
    </div>

    <div class="row g-4 mb-5">

        <!-- Destination -->
        <div class="col-12">
            <div class="card shadow-sm h-100 bg-light p-3">
                <div class="card-body">
                    <h3 class="text-center text-success mb-4">Địa điểm du lịch</h3>
                    <div class="row justify-content-center mb-3">
                        @foreach (var item in Model.DestinationList.Take(3))
                        {
                            <div class="col-md-4 mb-3">
                                <a href="/Destination?id=@item.Id" class="text-decoration-none text-dark">
                                    <div class="card h-100">
                                        <img src="@item.Images.FirstOrDefault()?.ImgUrl" class="card-img-top" alt="@item.Name" style="object-fit: cover; height: 200px;" />
                                        <div class="card-body">
                                            <h5 class="card-title">@item.Name</h5>
                                            <p class="card-text text-truncate">@item.Description</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                    <div class="text-center">
                        <a class="btn btn-outline-success" href="/destination">Xem thêm</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tour -->
        <div class="col-12">
            <div class="card shadow-sm h-100 bg-light p-3">
                <div class="card-body">
                    <h3 class="text-center text-success mb-4">Tour</h3>
                    <div class="row justify-content-center mb-3">
                        @foreach (var item in Model.TourList.Take(3))
                        {
                            <div class="col-md-4 mb-3">
                                <a href="/Tour?id=@item.Id" class="text-decoration-none text-dark">
                                    <div class="card h-100">
                                        <img src="@item.Images.FirstOrDefault()?.ImgUrl" class="card-img-top" alt="@item.Name" style="object-fit: cover; height: 200px;" />
                                        <div class="card-body">
                                            <h5 class="card-title">@item.Name</h5>
                                            <p class="card-text text-truncate">@item.Description</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                    <div class="text-center">
                        <a class="btn btn-outline-success" href="/tour">Xem thêm</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stay -->
        <div class="col-12">
            <div class="card shadow-sm h-100 bg-light p-3">
                <div class="card-body">
                    <h3 class="text-center text-success mb-4">Lưu trú</h3>
                    <div class="row justify-content-center mb-3">
                        @foreach (var item in Model.StayList.Take(3))
                        {
                            <div class="col-md-4 mb-3">
                                <a href="/Stay?id=@item.Id" class="text-decoration-none text-dark">
                                    <div class="card h-100">
                                        <img src="@item.Images.FirstOrDefault()?.ImgUrl" class="card-img-top" alt="@item.Name" style="object-fit: cover; height: 200px;" />
                                        <div class="card-body">
                                            <h5 class="card-title">@item.Name</h5>
                                            <p class="card-text text-truncate">@item.Description</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                    <div class="text-center">
                        <a class="btn btn-outline-success" href="/stay">Xem thêm</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Food -->
        <div class="col-12">
            <div class="card shadow-sm h-100 bg-light p-3">
                <div class="card-body">
                    <h3 class="text-center text-success mb-4">Ẩm thực</h3>
                    <div class="row justify-content-center mb-3">
                        @foreach (var item in Model.FoodList.Take(3))
                        {
                            <div class="col-md-4 mb-3">
                                <a href="/Foods?id=@item.Id" class="text-decoration-none text-dark">
                                    <div class="card h-100">
                                        <img src="@item.Images.FirstOrDefault()?.ImgUrl" class="card-img-top" alt="@item.Name" style="object-fit: cover; height: 200px;" />
                                        <div class="card-body">
                                            <h5 class="card-title">@item.Name</h5>
                                            <p class="card-text text-truncate">@item.Description</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                    <div class="text-center">
                        <a class="btn btn-outline-success" href="/foods">Xem thêm</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Service -->
        <div class="col-12">
            <div class="card shadow-sm h-100 bg-light p-3">
                <div class="card-body">
                    <h3 class="text-center text-success mb-4">Dịch vụ</h3>
                    <div class="row justify-content-center mb-3">
                        @foreach (var item in Model.ServiceList.Take(3))
                        {
                            <div class="col-md-4 mb-3">
                                <a href="/Service?id=@item.Id" class="text-decoration-none text-dark">
                                    <div class="card h-100">
                                        <img src="@item.Images.FirstOrDefault()?.ImgUrl" class="card-img-top" alt="@item.Name" style="object-fit: cover; height: 200px;" />
                                        <div class="card-body">
                                            <h5 class="card-title">@item.Name</h5>
                                            <p class="card-text text-truncate">@item.Description</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                    <div class="text-center">
                        <a class="btn btn-outline-success" href="/service">Xem thêm</a>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
